  <!--sidebar ends here-->
    <div class="container">
        <nav class="navbar">    
              <h2 for="btttn">Création compte</h2>
              <div class="search-wrapper">
                <span class="las la-search" ></span>
                <input type="search" placeholder="Recherche" />
              </div>
              <!--modification profil-->
              <div class="user-wrapper">
                <img src="/stylesheets/img/medecina.png" width="60px" height="60px" alt="">
                <div>
                    <h4>Admin</h4>
                    <small>-------</small>
                </div>
            </div>
        </nav>
        <main>
            <div class="main__container">
              <form class="form"> 
               <div class="titre"><h1>Ajouter un nouveau compte</h1></div>    
                  <div class="form_wrap">
                    <form action="/creer-compte" method="GET">
                   <div class="input_grp">
                     <div class="input_wrap">
                        
                       <label for="nom"><h4>Nom</h4></label>
                       <input type="text" id="nom" name="nom" required>
                   
                     </div>
                     <div class="input_wrap">
                       <label for="Prénom"><h4>Prénom</h4></label>
                       <input type="text" id="Prénom" name="prenom" required>
                     </div>
                   </div>
                  <div class="input_grp1">
                   <div class="input_wrap">
                     <label for="email"><h4>Email</h4></label>
                     <input type="email" id="email" name="email" required>
                   </div>
                   <div class="input_wrap">
                     <label for="num_tel"><h4>Numéro téléphone</h4></label>
                     <input type="tel" id="num_tel"  name="num-tel"required>
                   </div>
                  </div> 
                  <div class="input_grp2"> 
                    <div class="input_wrap">
                      <label for="mot de passe"><h4>Date Naissance</h4></label>
                      <input type="date" id="mot de passe" name="date" required>
                    </div>
                 <div class="input_grp2"> 
                  <div class="input_wrap">
                    <label for="mot de passe"><h4>Mot de passe</h4></label>
                    <input type="password" id="mot de passe" name="mdp" required>
                  </div>
                  <div class="input_wrap">
                    <label for="catégorie"><h4>Catégorie</h4></label>
                    <select id="catégorie" name="catégorie" required>
                      <option>Medecin</option>
                      <option>Infermier</option>
                      <option>Assistant-admin</option>
                    </select>
                  </div>
                 </div>
                 <div class="input_wrap">
                  <button class="btn" >Enregistrer</button>
                </form>
               </div> 
              </form>
            </div>
        </main>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
