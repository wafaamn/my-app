<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous" />
    <link rel="stylesheet" href="/stylesheets/Dossiers-medicaux.css" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" ><!-- link to add-->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">
    <title>Dossiers Médicaux | Sah-Tech</title>
</head>

<body id="body">
  <!--sidebar starts here-->
  <div class="sidebar">
    <img src="/stylesheets/img/logoapppp.png" class="sidebar_img">
    <div class="logo-details">
       <i class='bx bx-menu' id="btttn" ></i>
    </div>
    <ul class="nav-list">
      <li>
        <form action="examen" method="get">
       <button class="bttn">
        <i class="fa fa-stethoscope" aria-hidden="true"></i>
         <span class="links_name">Examen médical</span>
       </button></form>
       <span class="tooltip">Examen médical</span>
     </li>
     <li>
       <button class="bttn">
        <i class="fa fa-bar-chart" aria-hidden="true"></i>
         <span class="links_name">Statistique</span>
       </button>
       <span class="tooltip">Statistique</span>
     </li>

    </ul>
  </div>
  <!--sidebar ends here-->
    <div class="container">
        <nav class="navbar">    
              <h2 for="btttn">Dossiers médicaux</h2>
              <div class="search-wrapper">
                <span class="las la-search" ></span>
                <form  action ="find" method="POST">
                <input type="search" placeholder="search" for="search" name="search"/></form>
              </div>
              <!--modification profil-->
              <!-- drop-down user account -->
              <div class="user-wrapper">
                <div class="action">
                  <div class="profile" onclick="menuToggle();">
                    <img src="/stylesheets/img/medecina.png"  alt="">
                  </div>
          
                  <div class="menu">
                      <h3>
                          MERABET MOHAMED
                          <div>m.merabet@esi-sba.dz</div>
                      </h3>
                      <ul>
                          <li>
                              <button class="rundown-btn">
                                <span class="material-icons icons-size" id="p">person</span>
                                <span class="links_name"><h4>Mon profile</h4></span>
                              </button>
                          </li>
                          <li>
                            <button class="rundown-btn">
                              <span class="material-icons icons-size" id="p">mail</span>
                            
                                <span class="links_name"><h4>Boite de récéption</h4></span>
                              </button>
                          </li>
                          <li>
                            <form action="deconnecter" method="GET">
                            <button class="rundown-btn">
                              <span class="material-icons icons-size" id="p">logout</span>
                                <span class="links_name"><h4>Se déconnecter</h4></span>
                              </button></form>
                          </li>
                      </ul>
                  </div>
              </div>
            </div>             <!-- drop-down user account -->
        </nav>
        <main class="main">
            <table class="table">
            <thead>
                <tr>
                  <th>N°Dossier</th>
                  <th>Nom</th>
                  <th>Prénom</th>
                  <th>Date_Naiss</th>
                  <th>Sexe</th>
                  <th style="color:blueviolet;">Consulter</th>
                </tr>
              </thead>
              <tbody>
                <%
                if(userData.length!=0){
                var i=1;
                userData.forEach(function(data){
                %>
                <tr>
                  <td><%=data.iddoss %></td>
                  <td><a href ="/examen/<%=data.IdPatient%>" ><%=data.nom %></a></td>
                  <td><%=data.prenom %></td>
                  <td>
                    <p class="status status-unpaid"><%=data.datenaissance %></p>
                  </td>
                  <td><%=data.sexe %></td>
                  <td><a href="/modifier/<%=data.idpatient%>">Consulter</a></td>
                </tr>
                <%  i++; }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                <% } %>
               
              </tbody>
            </table>
        </main>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/stylesheets/fichiers-js/Dossiers-medicaux.js"></script>
    <!-- début drop-down user account -->
 
  <!-- fin drop-down user account -->

</body>

</html>